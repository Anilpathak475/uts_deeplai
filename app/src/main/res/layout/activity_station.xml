<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="24dp">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@android:drawable/screen_background_light_transparent"
            android:orientation="vertical"
            android:paddingLeft="8dp"
            android:paddingRight="8dp"
            android:paddingBottom="24dp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:padding="8dp"
                android:text="Normal Booking"
                android:textAlignment="center"
                android:textAllCaps="true"
                android:textColor="#4682B4"
                android:textSize="18sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text="From Station"
                android:textColor="#4682B4"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_source_station"
                android:layout_width="332dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginRight="50dp"
                android:elevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_from_stn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/stations"
                    android:hint="Source Station Name/Code"
                    android:textAlignment="center"
                    tools:listitem="@android:layout/simple_list_item_1" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="8dp"
                android:text=" To Station"
                android:textColor="#4682B4"
                android:textSize="14sp"
                android:textStyle="bold"
                android:typeface="serif" />

            <androidx.cardview.widget.CardView
                android:id="@+id/card_destination_station"
                android:layout_width="335dp"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_marginRight="50dp"
                android:elevation="8dp"
                app:cardBackgroundColor="#FFFFFF"
                app:cardCornerRadius="10dp">

                <androidx.appcompat.widget.AppCompatSpinner
                    android:id="@+id/sp_to_stn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:entries="@array/stations"
                    android:hint="Distination Station Name/Code"
                    android:textAlignment="center"
                    tools:listitem="@android:layout/simple_list_item_1" />
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_done"
                android:layout_width="184dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="100dp"
                android:layout_marginTop="10dp"
                android:layout_marginRight="80dp"
                android:background="#4682B4"
                android:elevation="10dp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_submit_journey"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#4682B4"
                    android:text="DONE"
                    android:textAlignment="center"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold"
                    android:typeface="serif" />
            </androidx.cardview.widget.CardView>
        </LinearLayout>
    </ScrollView>

</LinearLayout>