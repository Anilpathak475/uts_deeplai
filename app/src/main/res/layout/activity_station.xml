<LinearLayout android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="32dp"
        android:layout_marginTop="10dp"
        android:text="Normal Booking"
        android:textAlignment="center"
        android:textColor="#4682B4"
        android:textStyle="bold" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="250dp"
        android:text="From Station"
        android:textColor="#4682B4" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_source_station"
        android:layout_width="332dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginRight="50dp"
        android:elevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sp_from_stn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:hint="Source Station Name/Code"
            tools:listitem="@android:layout/simple_list_item_1"
            android:entries="@array/stations"
            android:textAlignment="center"/>
    </androidx.cardview.widget.CardView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="250dp"
        android:text=" To Station"
        android:textColor="#4682B4" />

    <androidx.cardview.widget.CardView
        android:id="@+id/card_destination_station"
        android:layout_width="335dp"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:layout_marginRight="50dp"
        android:elevation="8dp"
        app:cardBackgroundColor="#FFFFFF"
        app:cardCornerRadius="10dp">

        <androidx.appcompat.widget.AppCompatSpinner
            android:id="@+id/sp_to_stn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginRight="50dp"
            android:hint="Distination Station Name/Code"
            tools:listitem="@android:layout/simple_list_item_1"
            android:entries="@array/stations"
            android:textAlignment="center"/>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/card_done"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="100dp"
        android:layout_marginTop="10dp"
        android:layout_marginRight="80dp"
        android:background="#4682B4"
        android:elevation="10dp">

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_submit_journey"
            android:layout_width="188dp"
            android:layout_height="wrap_content"
            android:background="#4682B4"
            android:text="DONE"
            android:textAlignment="center"
            android:textColor="#FFFFFF"/>
    </androidx.cardview.widget.CardView>
</LinearLayout>